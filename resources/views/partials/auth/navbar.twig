<div class="mb-5 flex items-center justify-between">
	<div>
		<a href="/" class="text-xl font-bold text-indigo-500">Dentist Clinic</a>
		{% if USER.role == 'admin' %}
			<span class="bg-purple-100 font-medium text-center text-purple-500 py-1 px-3 uppercase rounded-full text-xs">admin</span>
		{% endif %}
		{% if USER.role == 'doctor' %}
			<span class="bg-rose-100 font-medium text-center text-rose-500 py-1 px-3 uppercase rounded-full text-xs">doctor</span>
		{% endif %}
		{% if USER.role == 'patient' %}
			<span class="bg-blue-100 font-medium text-center text-blue-500 py-1 px-3 uppercase rounded-full text-xs">patient</span>
		{% endif %}
		{% if USER.role == 'nurse' %}
			<span class="bg-yellow-100 font-medium text-center text-yellow-500 py-1 px-3 uppercase rounded-full text-xs">nurse</span>
		{% endif %}
		{% if USER.role == 'employee' %}
			<span class="bg-emerald-100 font-medium text-center text-emerald-500 py-1 px-3 uppercase rounded-full text-xs">employee</span>
		{% endif %}
	</div>
	<div>
		<a href="{{ '/dashboard' }}"
			 class="text-gray-500 ml-3 hover:text-indigo-500 transition-colors duration-200 font-medium">Dashboard</a>
		<a href="{{ '/dashboard' }}"
			 class="text-gray-500 ml-3 hover:text-indigo-500 transition-colors duration-200 font-medium">Users</a>
		<a href="{{ '/appointment/manage/create' }}"
			 class="text-gray-500 ml-3 hover:text-indigo-500 transition-colors duration-200 font-medium">Create Appointment</a>
		{% if is_('admin') or is_('doctor') %}

		<a href="{{ '/appointments' }}"
			 class="text-gray-500 ml-3 hover:text-indigo-500 transition-colors duration-200 font-medium">All Appointments</a>
		{% endif %}
		<a href="{{ '/logout' }}" class="text-gray-600 ml-3  hover:text-gray-800">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-6 inline w-6" fill="none" viewBox="0 0 24 24"
					 stroke="currentColor" stroke-width="2">
				<path stroke-linecap="round" stroke-linejoin="round"
							d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
			</svg>
		</a>
	</div>
</div>