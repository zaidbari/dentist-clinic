{% extends "auth/layout.twig" %}
{% block content %}
	<form method="post" action="/appointment/manage/insert">

		<div class="flex gap-5">
			<div class="w-1/3">
				<label for="name">
					{{ 'NAME' }}
				</label>
				<input
						id="name"
						name="name"
						class="form-input"
						placeholder="Your name" value="{{ user.name }}" required/>
			</div>
			<div class="w-1/3">
				<label for="email">
					{{ 'EMAIL' }}
				</label>
				<input
						id="email"
						class=" border-2 block w-full px-5 py-3 bg-slate-100 outline-none sm:text-sm border-gray-300 rounded-md"
						placeholder="Email address" value="{{ user.email }}" readonly/>
			</div>
			<div class="w-1/3">
				<label for="role">
					{{ 'ROLE' }}
				</label>
				{% if USER.role == 'admin' %}
					<select
							id="role"
							name="role"
							class="form-input"
							required
					>
						<option {% if user.role == 'admin' %} selected {% endif %} value="admin">ADMIN</option>
						<option {% if user.role == 'doctor' %} selected {% endif %} value="doctor">DENTIST</option>
						<option {% if user.role == 'nurse' %} selected {% endif %} value="nurse">NURSE</option>
						<option {% if user.role == 'employee' %} selected {% endif %} value="employee">EMPLOYEE</option>
						<option {% if user.role == 'patient' %} selected {% endif %} value="patient">PATIENT</option>
					</select>
				{% else %}
					<input
							id="role"
							class="form-input"
							placeholder="Email address" value="{{ user.role }}" readonly required/>

				{% endif %}
			</div>
		</div>
		<button
				type="submit"
				class="my-5 w-full button-primary"
		>
			SAVE
		</button>
	</form>
{% endblock %}